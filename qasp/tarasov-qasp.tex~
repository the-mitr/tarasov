\thispagestyle{empty}
\vspace*{2cm}

\begin{figure*}
\centering
\includegraphics[width=0.65\linewidth]{sec-i.pdf}
%\caption{Velocity \emph{vs} time graph for the function shown in Figure \ref{fig-05}.}
%\label{fig-06}
